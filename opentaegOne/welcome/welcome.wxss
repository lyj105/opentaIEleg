page {
  height:100%;
}

.container {
  display:flex;
  flex-direction:column;
  align-items:center;
}
.user-avatar {
  width:200rpx;
  height:200rpx;
  margin-top:160rpx;
  border-radius:50%;
}
.user-name {
  margin-top:100rpx;
  font-size:46rpx;
  font-weight:bold;
}
.moto-container {
  margin-top:200rpx;
  border:1px solid #405f80;
  width:300rpx;
  height:80rpx;
  border-radius:5px;
  text-align:center;
}
.moto {
  font-size:36rpx;
  font-weight:bold;
  line-height:80rpx;
  color:#405f80;
}